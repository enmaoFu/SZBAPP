<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
    android:id="@+id/lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#50BDFE">

        <include layout="@layout/public_title_include" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@mipmap/ic_my_bg_img">

        <com.bjsz.app.views.BaseLyRoundImageView
            android:id="@+id/my_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_head_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:border_width="0dp"
            app:border_color="#00000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textColor="#ffffff"
            android:layout_marginTop="13dp"
            android:textSize="16sp"
            android:layout_below="@+id/my_head"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_mechanism"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/my_mechanism_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_my_mechanism_img"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的机构"
            android:layout_toRightOf="@+id/my_mechanism_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="#505050"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_height="1.5px"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </View>

    <RelativeLayout
        android:id="@+id/my_archives"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/my_archives_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_my_archives_img"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康档案"
            android:layout_toRightOf="@+id/my_archives_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="#505050"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_height="1.5px"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </View>

    <RelativeLayout
        android:id="@+id/my_data"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/my_data_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_my_data_img"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康数据"
            android:layout_toRightOf="@+id/my_data_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="#505050"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_height="1.5px"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </View>

    <RelativeLayout
        android:id="@+id/my_seting"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/my_seting_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_my_seting_img"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_toRightOf="@+id/my_seting_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="#505050"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_height="1.5px"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </View>

</LinearLayout>
